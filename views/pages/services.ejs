<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tienda - Moda Hombre D'Angelo</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link rel="icon" href="/img/LogoOfic.png" type="image/png">
  <style>
    .tienda-section {
      max-width: 1100px;
      margin: 48px auto 0 auto;
      padding: 0 16px;
    }
    .tienda-title {
      font-size: 2.2rem;
      font-weight: 800;
      text-align: center;
      margin-bottom: 32px;
      color: #222;
    }
    .tienda-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 32px;
    }
    .card-producto img {
      width: 100%;
      height: 260px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 16px;
      background: #f3f3f3;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>
  <section class="tienda-section">
    <h2 class="tienda-title">Tienda</h2>
    <div class="tienda-grid">
      <% services.forEach(service => { %>
        <div class="card-producto">
          <img src="<%= service.image %>" alt="<%= service.title %>">
          <div class="nombre"><%= service.title %></div>
          <div class="precio">$<%= service.price %></div>
          <div class="descripcion"><%= service.description %></div>
          <div class="descripcion">Cantidad disponible: <%= service.cantidad %></div>
          <div class="descripcion">Colores: <%= service.colores ? service.colores.join(', ') : '' %></div>
          <div class="descripcion">Tallas: <%= service.tallas ? service.tallas.join(', ') : '' %></div>
        </div>
      <% }); %>
    </div>
  </section>
